@model IEnumerable<WebApplication1.Models.User>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@foreach (var user in Model)
{
<div class="card mb-4 mt-4">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <h5 class="card-title">@user.UserName</h5>
            <p class="card-text"><strong>Rola:</strong> @user.Role</p>
        </div>
        <div class="mx-4">
            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edytuj</a>
            <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">Usuń</button>
            </form>
        </div>
    </div>
</div>
}
<div class="pagination mt-3 d-flex flex-column align-items-center mx-auto">
    <span class="mb-2">Strona @ViewBag.CurrentPage z @ViewBag.TotalPages</span>

    <div class="d-flex justify-content-center">
        @if (ViewBag.CurrentPage > 1)
        {
            <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)" class="btn btn-secondary me-2">Poprzednia strona</a>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)" class="btn btn-secondary">Następna strona</a>
        }
    </div>
</div>
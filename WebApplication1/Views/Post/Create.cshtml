@model WebApplication1.Models.Post

@{
    ViewBag.Title = "Create Post";
    Layout = "_Layout";
}

<h2>Create Post</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CategoryId" value="@ViewBag.CategoryId" />

    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsPinned" class="form-check-input" type="checkbox" />
        <label asp-for="IsPinned" class="form-check-label">Pin this post</label>
    </div>

    <button type="submit" class="btn btn-primary">Add Post</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
